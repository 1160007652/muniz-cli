{
  "version": "1.0.12",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/@muniz/cli*",
    "packages/@muniz/common*",
    "packages/@muniz/muniz-plugin*",
    "packages/@muniz/ink*",
    "packages/@muniz/server*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ]
    },
    "bootstrap": {
      "hoist": true
    },
    "run": {
      "npmClient": "yarn"
    }
  }
}
